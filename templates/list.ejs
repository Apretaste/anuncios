<div class="row">
	<ul class="collection">
		<% ads.forEach(function(ad){ %>
			<a href="#!" onclick="apretaste.send({command:'ANUNCIOS VIEW', data:{'id':'<%= ad.id %>'}})" style="color:inherit;">
				<li class="collection-item avatar">
					<% if (ad.icon) { %>
						<img src="{{APP_IMAGE_PATH}}<%= ad.icon %>" alt="<%= ad.icon %>" class="circle">
					<% } %>
					<span class="title green-text"><%= ad.title %></span>
					<p class="subtitle"><%= ad.subtitle %></p>
				</li>
			</a>
		<% }) %>
	</ul>

	<div class="col s12 center-align">
		<p><small>Â¿No desea ver anuncios? <a href="#!" onclick="apretaste.send({command:'AMULETOS STORE'})">El Druida le puede ayudar.</a></small></p>
	</div>
</div>